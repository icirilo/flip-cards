@import '~@/stylus/variables.styl'

.tiles
	display: flex
	flex-wrap wrap
	margin-right: -10px
	margin-left: -10px
	&__item
		width: calc(33.33% - 20px)
		margin: 10px
		position relative
		@media $tablet
			width: calc(50% - 20px)
	&__thumbnail
		img
			max-width 100%
	&__front
	&__back
		overflow: hidden
		backface-visibility: hidden
		transition: transform .3s linear
	&__front
		transform: perspective(600px) rotateY(0deg)
		^[0]__item:hover &
			transform: perspective(600px) rotateY(-180deg)
	&__back
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		transform: perspective(600px) rotateY(180deg)
		background-color: #f1f1f1
		display: flex
		align-items center
		padding 20px
		box-sizing: border-box
		^[0]__item:hover &
			transform: perspective(600px) rotateY(0deg)
	&__title
		width: 100%
		text-align: center
		font-size: 24px